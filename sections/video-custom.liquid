{% comment %} create liquid video section html{% endcomment %}
{%- style -%}
  video{
    display: block;
    margin: 0 auto;
    width: 100%;
    height: 50%;
  }
{%- endstyle -%}

<div>
  {{
    section.settings.video
    | video_tag:
      image_size: '1100x',
      autoplay: true,
      controls: false,
      loop: true,
      muted: false
  }}
</div>



{% schema %}
{
  "name": "Video Custom",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "video",
      "id": "video",
      "label": "Video"
    }
  ],
  "presets": [
    {
      "name": "Video Custom",
      "category": "Video"
    }
  ]
}
{% endschema %}